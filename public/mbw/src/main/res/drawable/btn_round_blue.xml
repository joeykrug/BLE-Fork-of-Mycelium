<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="#adadff" />

            <stroke android:width="1dp" android:color="#229922" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="oval">
            <solid android:color="#272727" />

            <stroke android:width="1dp" android:color="#272727" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item><shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#222299" android:startColor="#4444FF" />

            <stroke android:width="1dp" android:color="#222299" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>